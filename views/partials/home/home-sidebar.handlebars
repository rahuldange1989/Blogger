<!-- Sidebar Widgets Column -->
<div class="col-md-4">

    <!-- Categories Widget -->
    <div class="card my-4">
        <div class="card-header">
            <h5>Categories</h5>
        </div>
        <div class="card-body">
            <div class="row">
                {{#each categories}}
                <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
                        <li>
                            <a href="/category/{{_id}}">{{name}}</a>
                        </li>
                    </ul>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

</div>